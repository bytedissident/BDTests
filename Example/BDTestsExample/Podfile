  target 'BDTestsExampleUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'BDTests', :git => 'https://github.com/bytedissident/BDTests'
    #pod 'BDTestsUI', :git => 'https://github.com/bytedissident/BDTestsUI'
  end

end
